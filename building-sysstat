fork https://github.com/sysstat/sysstat
git clone https://github.com/stevekay/sysstat.git
mkdir /var/tmp/mysar{,/data,/conf}
export man_group=$(id -ng)
export sa_dir=/var/tmp/mysar/data
export conf_dir=/var/tmp/mysar/conf
cd sysstat
./configure --prefix=/var/tmp/mysar --sysconfdir=/var/tmp/mysar/conf
make install
